.userCard
  %a.user-card-image{:href => "#"}
    =image_tag "event_stock_image.jpg"
  %table.user-card-text 
    %tr.top
      %td.user-card-avatar
        =link_to image_tag("Favicon.png"), "#"
      %td.user-card-blurb
        user name and blurb
      %tr.bottom
        %td.socialButtons{:colspan => "2"}
          social buttons