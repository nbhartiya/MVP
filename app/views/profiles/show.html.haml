.profiles
  .user-profile
    #profile-carousel.carousel.slide
      .carousel-inner
        .active.item
          =image_tag "Food 17.jpg"
        .item
          =image_tag "Food 18.jpg"
        .item
          =image_tag "Food 22.jpg"
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#profile-carousel"}
      %li{"data-slide-to" => "1", "data-target" => "#profile-carousel"}
      %li{"data-slide-to" => "2", "data-target" => "#profile-carousel"}
    .container
      .row.user-overview
        .span1          
        .span4
          %table
            %tr
              %td.profile-photo
                =image_tag "Favicon.png"
              %td.user-title
                %h1
                  Samovar Tea Lounge
            %tr
              %td.user-summary{:colspan => '2'}
                %h2 
                  Your Haven from the World <sup><a href = "#user-about", class = "read-more", data-target = "#user-about-detail", data-toggle = "collapse"> Read More </a></sup>
                %h3
                  123 Mission Street
                %h3
                  San Francisco, CA 94109
                %table.user-social-stats
                  %tr
                    %td
                      %a.sb.heart.circle.no-border.no-shadow.orange{:href=>"#"}
                    %td
                      %a.sb.star.circle.no-border.no-shadow.orange{:href=>"#"}
                    %td
                      %a.sb.share_this.circle.no-border.no-shadow.orange{:href=>"#"}
                  %tr.user-stats
                    %td 190
                    %td 190
                    %td Tell
                  %tr.user-stat-labels
                    %td followers
                    %td reviews
                    %td a friend
        .span1.heart_this
          %a.sb.heart.circle.no-border.no-shadow.black
        .span1
        .span4 
        .span1
