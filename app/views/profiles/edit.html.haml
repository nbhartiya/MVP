      .row.section-header
        .span12#user-chatter
          %a{:href => "#user-chatter", 'data-target'=>"#user-chatter-detail", 'data-toggle'=>"collapse"} Sample Chatter <span class="caret collapsed"></span>
          %ul
            %li 
              %a{:href=>"#"} Hide Participants
            %li 
