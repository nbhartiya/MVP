                        %tr
                          %td
                            =link_to image_tag("Favicon.png"), "#"
                          %td
                            Comment blahblahblahblah
          .span1
    .container
      .row.section-header
        .span12#user-about
          %a{:href => "#user-about", 'data-target'=>"#user-about-detail", 'data-toggle'=>"collapse"} Our Story <span class="caret collapsed"></span>
    .user-about
      .container
        .row
          .span1
          .span10
            #user-about-accordion.accordion
              #user-about-detail.accordion-body.collapse
                .accordion-inner
                  %p
                    About
          .span1


  -else
    .container
      .row
        .span2.badges
