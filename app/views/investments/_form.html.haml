= form_for @investment do |f|
  - if @investment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@investment.errors.count, "error")} prohibited this investment from being saved:"
      %ul
        - @investment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :amount
    = f.number_field :amount
  .actions
    = f.submit 'Save'
