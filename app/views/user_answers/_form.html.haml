= form_for @user_answer do |f|
  - if @user_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_answer.errors.count, "error")} prohibited this user_answer from being saved:"
      %ul
        - @user_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :survey_question_id
    = f.number_field :survey_question_id
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
