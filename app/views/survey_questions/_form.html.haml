= form_for @survey_question do |f|
  - if @survey_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@survey_question.errors.count, "error")} prohibited this survey_question from being saved:"
      %ul
        - @survey_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kind
    = f.text_field :kind
  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :question
    = f.text_area :question
  .field
    = f.label :low_extreme
    = f.text_area :low_extreme
  .field
    = f.label :high_extreme
    = f.text_area :high_extreme
  .field
    = f.label :format
    = f.text_field :format
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
