      -# range type question
      .row
        .span12.question
          %h2 What type of event would you be most excited about?
          .row
            .span4.single-visual-answer-range
              =render "layouts/visualanswerrange"
            .span4
              %slider.answer-slider{"floor" => "0", "ceiling" => "100", "step" => "1", "precision" => "0"}
            .span4.single-visual-answer-range
              =render "layouts/visualanswerrange"



