%form#new_signup{"accept-charset" => "UTF-8", :action => "/signups", :method => "post", :name => "new_signup"}
  %div{:style => "margin:0;padding:0;display:inline"}
    %input{:name => "utf8", :type => "hidden", :value => "?"}/
  %p.sign-up-text
    Already a member? <a data-dismiss = "modal" data-toggle='modal' href= "#sign_in">sign in</a>
  .email-login-form
    %input#user_email{:required => "required", :placeholder => "email", :name => "signup[email]", :size => "30", :type => "email", 'ng-model' => 'signup.email', 'ng-class' => "{error: new_foodie['signup[email]'].$invalid}"}
    .help-block{"ng-show" => "new_email['signup[email]'].$error.email"} Please enter a valid email
    %input{:name => "signup[chef]", :type => "hidden", :value => "0"}
    %button.signupbutton.usersignup.emailbutton.btn.btn-warning{'ng-click'=>'signupSubmitted()'} Sign Up