.container
  .row.devisecontainer
    .span12
      %h1 Forgot your password?
      %form#new_pass{"accept-charset" => "UTF-8", :action => "/users/password", :method => "post", :name => "new_pass"}
        %div{:style => "margin:0;padding:0;display:inline"}
          %input{:name => "utf8", :type => "hidden", :value => "âœ“"}/
          %input{:name => "authenticity_token", :type => "hidden", :value => "#{form_authenticity_token}"}/
        %div
          %input{:autofocus => "autofocus", :name => "user[email]", :size => "30", :type => "email", :placeholder => "Email", "ng-model" => "user.email", :required => "required"}
          %span.help-inline{"ng-show" => "new_pass['user[email]'].$error.required"} Required
          %span.help-inline{"ng-show" => "new_pass['user[email]'].$error.email"} Please enter a valid email
        %button.newpass.btn.btn-warning{'ng-disabled' => 'new_pass.$invalid', :type => "submit"} Send me reset password instructions
      = render "devise/shared/links" 