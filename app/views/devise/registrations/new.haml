%body.container.home
  .navbar.navbar-fixed-top
    = render "layouts/header"

%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :"data-validate" => "parsley") do |f|
  = devise_error_messages!
  %div
    = f.email_field :email, :autofocus => true, :required => true, :placeholder => "email"
  - if f.object.password_required?
    %div
      = f.password_field :password, :"data-minlength"=>"8", :"data-minlength-message" => "Password needs to be 8 characters", :required => true, :placeholder => "password"
    %div
      = f.password_field :password_confirmation, :required => true, :"data-equalto"=>"#user_password", :"data-equalto-message" => "Passwords need to match", :placeholder => "retype password"
  %div
    <input type = "radio", checked = "", name = "user[kind]", value = "Foodie"> Foodie
    %br/
    <input type = "radio", checked = "", name = "user[kind]", value = "Food Business"> Food Business
    %br/
    %br/
  %div= f.submit "Sign up"
= render "devise/shared/links"

#sign_up.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %h3#myModalLabel Sign Up for simmr
  .modal-body
    %p<
      Find the best events to attend recommended by your friends.&nbsp
      %a.learn_more_link{"data-toggle"=>"tooltip", "data-placement"=>"right", :href=>"#", :title=>"See where friends have visited and their reviews"}> Learn More
    %p.strong.sign-up-text
      Sign up with
    %p
      -if user_signed_in? == false
        = render "shared/signup"
  .modal-footer
    %button.usersignup.btn.btn-warning Sign Up

#sign_in.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %h3#myModalLabel Sign In
  .modal-body
    %p<
      Find the best events to attend recommended by your friends.&nbsp
      %a.learn_more_link{"data-toggle"=>"tooltip", "data-placement"=>"right", :href=>"#", :title=>"See where friends have visited and their reviews"}> Learn More
    %p.strong.sign-up-text
      Sign in with
    %p
      -if user_signed_in? == false
        = render "shared/login"
  .modal-footer
    %button.userlogin.btn.btn-warning Log In