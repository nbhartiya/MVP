=content_for :title, "simmer | log in"
.container{'ng-controller' => 'UserRegisterCtrl'}
  .row.devisecontainer
    .span12
      %h1 Log In
      = devise_error_messages!
      %form#new_user.new_user{"accept-charset" => "UTF-8", :action => "/users/sign_in", :method => "post", :name => "new_session"}
        %div{:style => "margin:0;padding:0;display:inline"}
          %input{:name => "utf8", :type => "hidden", :value => "âœ“"}
          %input{:name => "authenticity_token", :type => "hidden", :value => "#{form_authenticity_token}"}
        .field
          %input#user_email{:autofocus => "autofocus", :name => "user[email]", :placeholder => "email", :size => "30", :type => "email", :required => "required", 'ng-model' => "user.email"}
          %span.help-inline{"ng-show" => "new_session['user[email]'].$error.required"} Required
          %span.help-inline{"ng-show" => "new_session['user[email]'].$error.email"} Please enter a valid email
        .field
          %input#user_password{:name => "user[password]", :placeholder => "password", :size => "30", :type => "password", :required => "required", 'ng-model' => "user.password"}
          %span.help-inline{"ng-show" => "new_session['user[password]'].$error.required"} Required
        %div
          -#%input{:name => "user[remember_me]", :type => "hidden", :value => "0"}
          %input#user_remember_me{:name => "user[remember_me]", :type => "checkbox", :value => "1", :id => 'user_remember_me'}
          %label{:for => "user_remember_me"} Remember me
        %button#login.userlogin.btn.btn-warning{'ng-disabled' => 'new_session.$invalid', :type => "submit"} Log In
      = render "devise/shared/links"
   