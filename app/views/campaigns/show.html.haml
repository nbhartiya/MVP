.campaigns
  .campaign-profile
    #campaign-carousel.carousel.slide         
      .carousel-inner
        .active.item
          =image_tag "Food 17.jpg"
        -#
          -@campaign.images.each_with_index do |i, index|
            -if index == 0
              .item.active
                = filepicker_image_tag i.image
            -else
              .item
                = filepicker_image_tag i.image
    -#
      %ol.carousel-indicators
        -@campaign.images.each_with_index do |i, index|     
          - if index == 0
            %li.active{"data-target" => "#campaign-carousel", "data-slide-to" => index}
          - else
            %li{"data-target" => "#campaign-carousel", "data-slide-to" => index}
        
    .container
      .row.campaign-registration
        .span1
        .span4
          .campaign-summary.clearfix
            %h1
              #{@campaign.biz_name}
            %h2 
              #{@campaign.blurb}
            %h2
              by #{@campaign.campaign_starter.first_name} #{@campaign.campaign_starter.last_name}
            %hr
            %h3
              Campaign End Date
            %p 
              X more needed to tilt this campaign
            -if user_signed_in? == false
              .progress.progress-warning.clearfix.signed-out
                .bar{:style => "width: 80%"}
              %a.btn.btn-warning.standalone-button.clearfix{:"data-toggle" => "modal", :href=>"#sign_up"} Sign Up
              .btn.btn-warning.standalone-button.clearfix{:"data-toggle" =>"modal", :href=>"#sign_in"} Sign In
              %table.campaign-social-stats.clearfix.signed-out
                %tr
                  %td
                    %a.sb.heart.circle.no-border.no-shadow.orange{:href=>"#"}
                  %td
                    %a.sb.star.circle.no-border.no-shadow.orange{:href=>"#"}
                  %td
                    %a.sb.share_this.circle.no-border.no-shadow.orange{:href=>"#"}
                %tr.campaign-target-stats
                  %td 190
                  %td 190
                  %td Tell
                %tr.campaign-target-stat-labels
                  %td followers
                  %td reviews
                  %td a friend
            -if user_signed_in?
              .progress.progress-warning.clearfix.signed-in
                .bar{:style => "width: 80%"}
              .btn.btn-warning.campaign-join-button.clearfix Join
              %table.campaign-social-stats.clearfix.signed-in
                %tr
                  %td
                    %a.sb.heart.circle.no-border.no-shadow.orange{:href=>"#"}
                  %td
                    %a.sb.star.circle.no-border.no-shadow.orange{:href=>"#"}
                  %td
                    %a.sb.share_this.circle.no-border.no-shadow.orange{:href=>"#"}
                %tr.campaign-target-stats
                  %td 190
                  %td 190
                  %td Tell
                %tr.campaign-target-stat-labels
                  %td followers
                  %td reviews
                  %td a friend
        .span1.heart_this
          %a.sb.heart.circle.no-border.no-shadow.black{title: 'Heart This'}
        .span1
        .span4 
        .span1
  .container
    .row
      .span2.scroll-menu.campaign
        %ul.nav.nav-list.scroll-menu-items{"data-spy" => "affix", "data-offset-top" => "680", "data-offset-bottom"=> "150"}
          %li 
            %a{:href=>"#about"} About
          %li 
            %a{:href=>"#why"} Why Join
      .span10
        .row.section-header#about
          .span10#campaign-target-story
            %a{:href => "#campaign-target-story", 'data-target'=>"#campaign-target-story-detail", 'data-toggle'=>"collapse"} About #{@campaign.biz_name} <span class="caret"></span>
        .row.campaign-target-story
          .span10
            #campaign-target-story-accordion.accordion
              #campaign-target-story-detail.accordion-body.collapse.in
                .accordion-inner
                  %p
                    #{@campaign.about}
      .row
        .span10.offset2
          .row.section-header#why
            .span12#why-join
              %a{:href => "#why-join", 'data-target'=>"#why-join-detail", 'data-toggle'=>"collapse"} Why Join? <span class="caret"></span>
          .row.why-join
            .span10
              #why-join-accordion.accordion
                #why-join-detail.accordion-body.collapse.in
                  .accordion-inner
                    %p
                      #{@campaign.why_join}

-#
  %p#notice= notice

  %p
    %b Biz name:
    = @campaign.biz_name
  %p
    %b Blurb:
    = @campaign.blurb
  %p
    %b About:
    = @campaign.about
  %p
    %b Why join:
    = @campaign.why_join
  %p
    %b Location:
    = @campaign.location_id
  %p
    %b Foodie:
    = @campaign.campaign_starter_id
  %p
    %b Host:
    = @campaign.host_id

  = link_to 'Edit', edit_campaign_path(@campaign)
  \|
  = link_to 'Back', campaigns_path
