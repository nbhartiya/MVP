= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :location
    = f.text_area :location
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :target
    = f.number_field :target
  .field
    = f.label :raised
    = f.number_field :raised
  .field
    = f.label :terms
    = f.text_area :terms
  .field
    = f.label :min_investment
    = f.number_field :min_investment
  .actions
    = f.submit 'Save'
