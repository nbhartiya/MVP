= form_for @accreditation do |f|
  - if @accreditation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@accreditation.errors.count, "error")} prohibited this accreditation from being saved:"
      %ul
        - @accreditation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :individual_income
    = f.text_field :individual_income
  .field
    = f.label :joint_income
    = f.text_field :joint_income
  .field
    = f.label :net_worth
    = f.text_field :net_worth
  .field
    = f.label :experience
    = f.check_box :experience
  .field
    = f.label :agree
    = f.check_box :agree
  .actions
    = f.submit 'Save'
